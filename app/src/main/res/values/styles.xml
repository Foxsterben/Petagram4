<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

    </style>

    <style name="CampoTextoBorde" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">#0097A7</item>
        <item name="colorControlActivated">#0097A7</item>
        <item name="android:textColorHighlight">#0097A7</item>
    </style>

    <style name="MiBotonRaised" parent="Theme.AppCompat.Light">
        <item name="colorButtonNormal">#0097A7</item>
        <item name="colorControlHighlight">@color/colorFondo</item>
        <item name="android:textColor">@color/colorFondo</item>
    </style>

</resources>