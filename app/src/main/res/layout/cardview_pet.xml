<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cv_pet"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/activity_vertical_margin"
    card_view:cardCornerRadius="@dimen/corner_radius_cardview"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/colorFondo"
        >
        <ImageView
            android:id="@+id/img_pet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/pet4"
            android:scaleType="centerCrop"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/btnImg_boneLike"
                android:layout_width="@dimen/icono"
                android:layout_height="@dimen/icono"
                android:src="@drawable/hueso_blanco"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_nombrePet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/nombre_pet"
                    android:textSize="@dimen/tS_textos"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/colorNegro"
                    android:layout_marginLeft="@dimen/lmLS_nombrePet"
                    android:layout_marginStart="@dimen/lmLS_nombrePet"/>
            </LinearLayout>


            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginRight="1dp"
                android:gravity="right">

                <TextView
                    android:id="@+id/tv_contadorLikes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="@string/likes_pet"
                    android:textSize="@dimen/tS_textos"
                    android:textColor="@color/colorNegro"
                    />

                <ImageView
                    android:id="@+id/img_bone2"
                    android:layout_width="@dimen/icono"
                    android:layout_height="@dimen/icono"
                    android:src="@drawable/hueso_amarillo"
                    android:layout_marginLeft="15dp"
                    android:layout_marginStart="15dp"
                    />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>



</android.support.v7.widget.CardView>